@model WebVendaDireta.Models.Produto

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4>Produto</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            Nome do produto
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Nome)
        </div>
        <div class="col-md-3">
            Preço
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Preco)
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Comprar", "ComprarItem", new { id = @ViewBag.ProdutoId })
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar para produtos", "Index")
</div>